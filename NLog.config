<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<!-- Target para log no console -->
		<target name="console" xsi:type="Console" layout="${date:format=HH\:mm\:ss} ${level} ${message}" />

		<!-- Target para log em arquivo -->
		<target name="file" xsi:type="File" fileName="logs/logfile.txt" layout="${longdate} ${level} ${message} ${exception:format=ToString}" />
	</targets>

	<rules>
		<!-- Regra para direcionar logs para o console e arquivo -->
		<logger name="*" minlevel="Info" writeTo="console,file" />
	</rules>
</nlog>
